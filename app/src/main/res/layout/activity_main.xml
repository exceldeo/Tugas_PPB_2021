<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Value 1 = "
                android:textSize="8pt" />

            <EditText
                android:id="@+id/et_input_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Input Value 1"
                android:inputType="numberSigned|numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="8pt"
                android:id="@+id/tv_label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Value 2 = " />

            <EditText
                android:id="@+id/et_input_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal"
                android:hint="Input Value 2"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_label4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hasil"
            android:textSize="12pt"/>

        <TextView
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tambah"
                android:onClick="operasi"
                android:layout_marginRight="2dp"></Button>
            <Button
                android:id="@+id/btn_kurang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kurang"
                android:onClick="operasi"
                android:layout_marginRight="2dp"></Button>
            <Button
                android:id="@+id/btn_kali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kali"
                android:onClick="operasi"
                android:layout_marginRight="2dp"></Button>
            <Button
                android:id="@+id/btn_bagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bagi"
                android:onClick="operasi"
                android:layout_marginRight="2dp"></Button>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>